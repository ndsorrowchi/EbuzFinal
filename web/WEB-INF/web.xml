<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>EmplLogin</servlet-name>
        <servlet-class>EmployeePart.EmplLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmplHome</servlet-name>
        <servlet-class>EmployeePart.EmplHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmplLogout</servlet-name>
        <servlet-class>EmployeePart.EmplLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmplLogin</servlet-name>
        <url-pattern>/EmplLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmplHome</servlet-name>
        <url-pattern>/EmplHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmplLogout</servlet-name>
        <url-pattern>/EmplLogout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <listener>
        <listener-class>Utils.MyContextListener</listener-class>
    </listener>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>ConnPool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
